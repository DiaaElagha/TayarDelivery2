<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title | نرد </title>
    <meta name="description" content="Login page example">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: {
                "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"]
            },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <link href="~/adminpage/login/login-3.rtl.css" rel="stylesheet" type="text/css" />

    <link href="~/adminpage/css/global/vendors.bundle.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/adminpage/css/global/style.bundle.rtl.css" rel="stylesheet" type="text/css" />

    <link href="~/adminpage/css/skins/header/base/light.rtl.css" rel="stylesheet" />
    <link href="~/adminpage/css/skins/header/menu/light.rtl.css" rel="stylesheet" />
    <link href="~/adminpage/css/skins/brand/dark.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/adminpage/css/skins/aside/dark.rtl.css" rel="stylesheet" type="text/css" />

    <link rel="shortcut icon" href="~/assets/media/logos/favicon.ico" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;700;900&family=Roboto&display=swap" rel="stylesheet">
    <style>
        input, textarea, small, button, a, body, h1, h2, h3, h4, h5, h6 {
            font-family: Cairo !important;
        }
    </style>
</head>

<body class="kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--fixed kt-subheader--enabled kt-subheader--solid kt-aside--enabled kt-aside--fixed kt-page--loading">
    <!-- begin:: Page -->
    <div class="kt-grid kt-grid--ver kt-grid--root">
        <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v3 kt-login--signin" id="kt_login">
            <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" style="background-image: url(/adminpage/login/bg-3.jpg);">
                <div class="kt-grid__item kt-grid__item--fluid kt-login__wrapper">
                    <div class="kt-login__container">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        var KTAppOptions = {
            "colors": {
                "state": {
                    "brand": "#5d78ff",
                    "dark": "#282a3c",
                    "light": "#ffffff",
                    "primary": "#5867dd",
                    "success": "#34bfa3",
                    "info": "#36a3f7",
                    "warning": "#ffb822",
                    "danger": "#fd3995"
                },
                "base": {
                    "label": ["#c5cbe3", "#a1a8c3", "#3d4465", "#3e4466"],
                    "shape": ["#f0f3ff", "#d9dffa", "#afb4d4", "#646c9a"]
                }
            }
        };
    </script>

    <script src="~/adminpage/js/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/adminpage/js/scripts.bundle.js" type="text/javascript"></script>


    <script src="~/adminpage/login/login-general.js" type="text/javascript"></script>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

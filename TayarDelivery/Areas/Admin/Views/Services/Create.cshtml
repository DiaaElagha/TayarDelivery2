@model TayarDelivery.Models.ViewModel.Home.ServiceVM

@{
    ViewData["Title"] = "اضافة خدمة";
    Layout = null;
}

<form asp-action="Create" method="post" class="ajaxForm" tname="#dataTableId">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Title" asp-for="Name" class="form-control-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="IconName" asp-for="IconName" class="form-control-label"></label>
                <input asp-for="IconName" class="form-control">
                <span asp-validation-for="IconName" class="text-danger"></span>
                <small><a href="https://fontawesome.com/icons?d=gallery" class="text-danger" target="_blank">الايقونات</a></small>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Title" asp-for="Description" class="form-control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    <button type="button" class="rounded btn btn-secondary" data-dismiss="modal">اغلاق</button>
    <button type="submit" class="rounded btn btn-primary">ارسال</button>
</form>
<script>
    PageLoadActions();
</script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

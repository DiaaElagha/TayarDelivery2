@model TayarDelivery.Models.ViewModel.Orders.AddNoteVM

@{
    ViewData["Title"] = "اضافة طلب";
    Layout = null;
}
<style>
    .checkbox {
        -webkit-transform: scale(1.5, 1.5)
    }
</style>
<form asp-action="AddNote" method="post" class="ajaxForm">
    <input type="hidden" value="@ViewBag.OrderId" name="id" />
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="text" class="form-control-label"></label>
                <textarea asp-for="text" class="form-control" rows="3"></textarea>
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="button" class="rounded btn btn-secondary" data-dismiss="modal">اغلاق</button>
    <button type="submit" class="rounded btn btn-primary">ارسال</button>
</form>
<script>
    PageLoadActions();
</script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
